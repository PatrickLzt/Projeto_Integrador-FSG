{
    "version": 2,
    "builds": [
        {
            "src": "backend/config/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/config/wsgi.py"
        },
        {
            "src": "/admin/(.*)",
            "dest": "backend/config/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "backend/config/wsgi.py"
        },
        {
            "src": "/(.*\\.(html|css|js|png|jpg|jpeg|gif|svg|ico|json))",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(cardapio|carrinho|checkout|pedidos|perfil|login|cadastro|welcome)",
            "dest": "/frontend/$1.html"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "regions": [
        "gru1"
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings"
    }
}
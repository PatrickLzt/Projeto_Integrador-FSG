# Variáveis de ambiente para Sweet Cupcakes API

# Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===== NEON DATABASE (Vercel Postgres) =====
# Usar DATABASE_URL do Neon (prioridade sobre DB_* individuais)
DATABASE_URL=database_url

# Database Local (PostgreSQL) - Usado apenas se DATABASE_URL não estiver definido
DB_ENGINE=django.db.backends.postgresql
DB_NAME=cupcakes_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# CORS (adicione seus domínios de front-end)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://sweet-cupcakes.vercel.app

